<style>
  .features-section {
    padding: var(--section-spacing) 0;
    position: relative;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .section-desc {
    color: var(--color-text-muted);
    font-size: 1.125rem;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .feature-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: var(--radius-md);
    padding: 2rem;
    transition:
      transform 0.3s ease,
      border-color 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-5px);
    border-color: var(--color-primary);
    background: rgba(255, 255, 255, 0.05);
  }

  /* Highlight for the Minigame card */
  .feature-card.brand-highlight {
    border-color: rgba(139, 92, 246, 0.4);
    box-shadow: 0 0 30px rgba(139, 92, 246, 0.05);
  }

  .icon-box {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    display: inline-block;
    padding: 1rem;
    background: rgba(139, 92, 246, 0.1);
    border-radius: 50%;
  }

  h3 {
    margin-bottom: 0.5rem;
    font-size: 1.25rem;
  }

  p {
    color: var(--color-text-muted);
    font-size: 0.95rem;
  }

  .future-games {
    display: block;
    margin-top: 0.75rem;
    font-size: 0.85rem;
    color: var(--color-accent);
    font-style: italic;
  }
</style>
