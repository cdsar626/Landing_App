<section class="hero-section">
  <div class="container hero-content">
    <div class="badge" data-i18n="hero.badge">Slow Dating Revolution</div>
    <h1 class="hero-title" data-i18n="hero.title">
      Connect just like <br />
      <span class="gradient-text">we did as kids.</span>
    </h1>
    <p class="hero-subtitle" data-i18n="hero.subtitle">
      No prejudice. Just playing. An app to find partners (or friends) based on
      essence. Time is gold: show interest to keep the connection alive.
    </p>

    <div class="cta-group">
      <a href="#waitlist" class="btn-primary" data-i18n="nav.waitlist"
        >Join the Pool</a
      >
      <a href="#features" class="btn-secondary" data-i18n="nav.features"
        >How it works</a
      >
    </div>

    <div class="hero-visual">
      <!-- Abstract Heart Representation -->
      <div class="abstract-heart">
        <div class="heart-shape"></div>
        <div class="heart-pulse"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-section {
    min-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: 4rem;
    position: relative;
    overflow: hidden;
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
    z-index: 5;
  }

  .badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 2rem;
    font-size: 0.875rem;
    color: white;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    backdrop-filter: blur(5px);
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
    color: white;
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2.5rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-group {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 4rem;
  }

  .btn-secondary {
    padding: 0.75rem 2rem;
    color: white;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 9999px;
    font-weight: 600;
    transition: all 0.2s;
  }

  .btn-secondary:hover {
    border-color: white;
    background: rgba(255, 255, 255, 0.2);
  }

  /* Abstract Heart Visual */
  .hero-visual {
    margin-top: 3rem;
    display: flex;
    justify-content: center;
    position: relative;
    height: 150px;
  }

  .abstract-heart {
    position: relative;
    width: 120px;
    height: 120px;
    animation: float 6s ease-in-out infinite;
    z-index: 10;
  }

  .heart-shape {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%); /* Center strictly */
    width: 120px;
    height: 120px;
    background: linear-gradient(135deg, #f472b6, #db2777);
    box-shadow: 0 0 30px rgba(219, 39, 119, 0.4);

    /* Organic "Morphing" Heart-ish Shape */
    border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
    animation: morph-heart 8s ease-in-out infinite;
  }

  /* Keyframes for the organic morphing effect */
  @keyframes morph-heart {
    0% {
      border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
    }
    33% {
      border-radius: 50% 50% 40% 40% / 50% 50% 70% 60%;
    }
    /* The "Heart" Moment: Wide top, tappered bottom, nearly symmetrical */
    50% {
      border-radius: 50% 50% 25% 25% / 55% 55% 85% 85%;
      box-shadow: 0 0 50px rgba(219, 39, 119, 0.6); /* Glow intense */
    }
    66% {
      border-radius: 40% 60% 30% 70% / 55% 30% 75% 45%;
    }
    100% {
      border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
    }
  }

  /* Pulse stays as a subtle circular echo behind */
  .heart-pulse {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100px;
    height: 100px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    animation: pulse-ring 3s infinite;
    z-index: -1;
    pointer-events: none;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-15px) scale(1.05);
    }
  }

  @keyframes pulse-ring {
    0% {
      width: 100px;
      height: 100px;
      opacity: 0.6;
      transform: translate(-50%, -50%);
    }
    100% {
      width: 280px;
      height: 280px;
      opacity: 0;
      transform: translate(-50%, -50%);
    }
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }
  }
</style>
